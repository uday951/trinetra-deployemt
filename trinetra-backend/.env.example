# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/trinetra

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Push Notification Configuration
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Anti-Theft Configuration
ANTI_THEFT_API_KEY=your-anti-theft-api-key

# Geolocation API
GEOLOCATION_API_KEY=your-geolocation-api-key

# Logging
LOG_LEVEL=debug
